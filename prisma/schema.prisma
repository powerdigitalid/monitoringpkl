// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DataSiswa {
  nisn         Float  @id
  nama_siswa   String
  jurusan      String
  deskripsi    String
  alamat       String
  no_telp      Float
  ttl          String
  nama_ortu    String
  no_telp_ortu Float
  userId       Int?
  dudi         Dudi   @relation(fields: [DudiId], references: [id])
  DudiId       Int
  Laporan      Laporan[]
}

model DataGuru {
  nip       Float  @id
  nama_guru String
  alamat    String
  no_telp   Float
  userId    Int?
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  role     String
}

model Dudi {
  id        Int         @id @default(autoincrement())
  nama_dudi String
  alamat    String
  no_telp   Float
  siswalogs LogSiswa[]
  userId    Int?
  DataSiswa DataSiswa[]
}

model LogSiswa {
  id        Int      @id @default(autoincrement())
  nama      String
  kegiatan  String
  dudi      Dudi     @relation(fields: [dudiId], references: [id])
  dudiId    Int
  image     String?
  createdAt DateTime
}

model LogGuru {
  id        Int      @id @default(autoincrement())
  nama      String
  kegiatan  String
  image     String?
  createdAt DateTime
}

model Laporan {
  id        Int      @id @default(autoincrement())
  nama      String
  file      String?
  siswa     DataSiswa @relation(fields: [SiswaId], references: [nisn])
  SiswaId   Float
  createdAt DateTime
}
